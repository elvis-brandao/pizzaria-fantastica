<link rel="stylesheet" href="/css/pizza.css">
	<main>
		<h1><%= pizza.nome %></h1>
		<h2><%= pizza.preco.toLocaleString('pt-br', { minimumFractionDigits: 2 , style: 'currency', currency: 'BRL' }) %></h2>
		<img src="<%= pizza.img %>" alt="<%= pizza.nome %>">
		<div>Ingredientes: <%= pizza.ingredientes.join(", ") %></div>
		<button>+ Add</button>
		
		<% if(idPrev != undefined){ %>
		<a href="/pizzas/<%= idPrev %>" class="prev">&lt;</a>
		<% } %>

		<% if(idNext != undefined){ %>
		<a href="/pizzas/<%= idNext %>" class="next">&gt;</a>
		<% } %>
	</main>
